<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="innovation.myapplication" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".Splash"
            android:theme="@style/Theme.AppCompat.NoActionBar" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".RegisterActivity"
            android:label="@string/register" >
        </activity>

        <!--suppress AndroidDomInspection -->
        <activity
            android:name="innovation.tabsswipe.adapter.MainActivity"
            android:label="@string/app_name" >

        </activity>


        <activity
            android:name="innovation.tabsswipe.adapter.Contacts"
            android:label="@string/register" >
        </activity>

        <activity
            android:name="innovation.tabsswipe.adapter.done"
            android:label="@string/register" >
        </activity>

        <activity
            android:name="innovation.tabsswipe.adapter.Tasks"
            android:label="@string/register" >
        </activity>





    </application>

</manifest>
